<div class="field is-grouped is-grouped-centered">
  <div class="control">
    <%= form_for [:account, @project] do |form| %>
      <%=form.label :title %>
      <%=form.text_field :title, class:'input is-primary', placeholder: 'Title' %>
      <%=form.label :description %>
      <%=form.text_field :description, class:'input is-primary', placeholder: 'Description'  %>
      <%= form.submit 'Submit', class:'button is-primary is-outlined' %>
    <%end%>
  </div>
</div>
